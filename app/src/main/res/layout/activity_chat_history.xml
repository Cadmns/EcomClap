    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:contentInsetEnd="0dp"
        android:contentInsetLeft="72dp"
        android:contentInsetRight="0dp"
        android:contentInsetStart="72dp"
        android:minHeight="?attr/actionBarSize"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        tools:ignore="MissingConstraints">
        <!--if any problem is arise than change (android:)  to (app:) -->
        <TextView
            android:text="fd"
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:singleLine="true"
            android:layout_gravity="center"
            android:textColor="#FFF" />
        <TextView
            android:drawableLeft="@drawable/view_details_btn"
            android:gravity="center"
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="@dimen/dimen_30dp"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/padding_10"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:id="@+id/view_complain_details"
            android:paddingLeft="@dimen/dimen_5dp"
            android:paddingRight="@dimen/dimen_5dp"
            android:textSize="@dimen/dimen_15sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            />
    </android.support.v7.widget.Toolbar>
    <TextView
        android:id="@+id/no_chats"
        android:visibility="gone"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="no conversation found"/>
    <LinearLayout
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/rel_layout_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:paddingBottom="@dimen/dimen_25dp"
            android:layout_below="@+id/caback_text_view"
            android:id="@+id/message_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rel_layout_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <EditText
            android:background="@drawable/reply_shape"
            android:id="@+id/lblMsgFrom"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:hint="Say Something"
            android:textColor="#060505"
            android:textSize="@dimen/dimen_19dp"
            android:visibility="visible" />
        <Button
            android:id="@+id/send_reply_btn"
            android:layout_gravity="center"
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_below="@+id/lblMsgFrom"
            android:textAlignment="center"
            android:background="@drawable/send_button"
            android:layout_marginRight="-5dp"
            android:src="@drawable/ic_investment" />
    </LinearLayout>
</RelativeLayout>