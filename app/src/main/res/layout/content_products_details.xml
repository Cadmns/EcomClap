<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/product_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_override_two"
        android:layout_marginBottom="@dimen/margin_override_two"
        android:textColor="@android:color/black"
        android:textSize="@dimen/backdrop_title" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@+id/product_title"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_album_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/history_title"
                android:text="Description"
                android:layout_marginLeft="@dimen/margin_override_three"
                android:textSize="@dimen/font_size_sixth"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/font_size_three"
                android:layout_below="@+id/history_title"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_override_fifth"
                android:layout_marginRight="@dimen/margin_override_fifth"
                android:id="@+id/description"
                />




        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cardView8"
        android:layout_below="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_album_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2"
            android:paddingTop="@dimen/margin_override_two"
            android:paddingBottom="@dimen/margin_override_two"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qty: "
                android:fontFamily="sans-serif"
                android:layout_marginLeft="@dimen/margin_override_three"
                android:textStyle="bold"
                android:textSize="15dp"



                />

            <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                android:layout_width="100dp"
                android:id="@+id/quantity1"
                app:initialNumber="1"
                android:layout_marginLeft="@dimen/margin_override_fifth"
                android:layout_height="20dp">

            </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>



        </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="top"
                android:orientation="horizontal">

                <Spinner
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/variations"
                    android:layout_height="wrap_content"></Spinner>



            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/booking_date"
        android:layout_below="@+id/cardView8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_album_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/booking_dateView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textAllCaps="false"
                android:layout_below="@+id/cardView8"
                android:text="Select Booking Date"
                android:visibility="gone"
                android:drawablePadding="@dimen/padding_override_two"
                android:layout_marginTop="@dimen/margin_override_three"
                android:layout_marginBottom="@dimen/margin_override_three"
                android:gravity="start|center"
                android:paddingLeft="@dimen/padding_override_two"
                android:paddingRight="@dimen/padding_override_two"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/serviceCost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textAllCaps="false"
                android:fontFamily="sans-serif"
                android:layout_marginTop="@dimen/margin_override_three"
                android:layout_marginBottom="@dimen/margin_override_three"
                android:layout_below="@+id/cardView8"
                android:text=""
                android:drawablePadding="@dimen/padding_override_two"
                android:textSize="@dimen/dimen_15sp"
                android:gravity="start|center"
                android:paddingLeft="@dimen/padding_override_two"
                android:paddingRight="@dimen/padding_override_two"
                android:textStyle="bold" />


        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/addTocart"
        android:layout_width="match_parent"
        android:layout_below="@+id/booking_date"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/cardView_bottom_margin"
        android:layout_marginTop="@dimen/left_right_padding"
        android:background="@drawable/button_bg"
        android:padding="@dimen/padding_override_two"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dimen_18sp"
        android:layout_marginLeft="@dimen/margin_override_fifth"
        android:layout_marginRight="@dimen/margin_override_fifth"
        android:text="Add to cart"/>


</RelativeLayout>

