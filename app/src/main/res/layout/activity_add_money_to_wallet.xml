<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.wallet_activity.AddMoneyToWallet">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:contentInsetEnd="0dp"
        android:contentInsetLeft="72dp"
        android:contentInsetRight="0dp"
        android:contentInsetStart="72dp"
        android:minHeight="?attr/actionBarSize"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        local:popupTheme="@style/MyCustomToolBarTheme"
        local:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <RelativeLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:text="Add Money to Ecomm Wallet"
                android:textSize="@dimen/dimen_18sp"
                android:fontFamily="sans-serif-condensed"
                />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:gravity="center"
        android:background="#E8E7E7"
        android:id="@+id/amount_container"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50dp">
        <TextView
            android:id="@+id/available_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/color_222222"
            android:text="Available Balance"
            android:textSize="@dimen/dimen_12sp"
            android:fontFamily="sans-serif-condensed"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dimen_30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/amount_container"
        android:gravity="center">
        <EditText
            android:layout_centerHorizontal="true"
            android:id="@+id/amount_box"
            android:layout_height="wrap_content"
            android:layout_width="260dp"
            android:lines="2"
            android:inputType="number"
            android:drawableStart="@drawable/ic_indian_rupee"
            android:drawablePadding="@dimen/dimen_10dp"
            android:hint="Enter Amount"/>
        <Button
            android:id="@+id/add_money_btn"
            android:layout_margin="@dimen/dimen_20dp"
            android:background="@color/colorPrimary"
            android:inputType="number"
            android:textColor="@color/color_white"
            android:layout_below="@+id/amount_box"
            android:layout_width="match_parent"
            android:text="Add Money"
            android:fontFamily="sans-serif-condensed"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>