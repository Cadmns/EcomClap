<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/header_message"
        android:layout_marginTop="@dimen/padding_large_view"
        android:gravity="center"
        android:paddingTop="@dimen/padding_large_view"
        android:lineSpacingExtra="2dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textStyle="bold"
        android:text="We take care of your Daily Needs."
        android:textSize="@dimen/header_title"/>


    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_below="@+id/header_message"
        android:layout_height="250dp"
        android:layout_marginTop="45dp"
        app:lottie_fileName="timeline.json"
        app:lottie_loop="true"
        app:lottie_autoPlay="true" />

</RelativeLayout>