<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/curved_bottomsheet"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin"
    android:layout_marginTop="@dimen/dimen_50dp"
    app:behavior_hideable="true"
    app:behavior_peekHeight="@dimen/dimen_55dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <LinearLayout
        android:id="@+id/text_view_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        >
        <TextView
            android:layout_marginLeft="@dimen/dimen_25dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:text="Apply Promocode "
            android:textStyle="bold"
            android:textSize="@dimen/dimen_25dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/close_button"
            android:layout_width="@dimen/dimen_30dp"
            android:background="@drawable/ic_close_black_24dp"
            android:layout_marginRight="@dimen/padding_10"
            android:layout_height="@dimen/dimen_30dp"
            ></Button>
    </LinearLayout>

    <TextView
        android:layout_marginLeft="@dimen/dimen_25dp"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:id="@+id/caback_text_view"
        android:layout_below="@+id/text_view_container"
        android:layout_width="wrap_content"
        android:text="Exclusive Cashback Offers for You "
        android:textStyle="bold"
        android:layout_height="wrap_content" />


    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="@dimen/padding_10"
        android:layout_below="@+id/caback_text_view"
        android:id="@+id/RecyleViewCoupon1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
    <!--</android.support.v4.widget.SwipeRefreshLayout>-->

</RelativeLayout>