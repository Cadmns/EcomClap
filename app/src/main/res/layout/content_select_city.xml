<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/header_message"
        android:layout_marginTop="@dimen/padding_large_view"
        android:gravity="center"
        android:paddingTop="@dimen/padding_large_view"
        android:lineSpacingExtra="2dp"
        android:textColor="@color/text_color"
        android:textSize="@dimen/header_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_large_view"
        android:paddingRight="@dimen/padding_large_view"
        android:gravity="center"
        android:lineSpacingExtra="2dp"
        android:layout_below="@+id/header_message"
        android:id="@+id/inner_layout">

        <Space
            android:id="@+id/spacer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/left_right_padding" />

        <TextView
            android:id="@+id/page_slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spacer"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/padding_large_view"
            android:paddingRight="@dimen/padding_large_view"
            android:textColor="@color/text_color"
            android:textSize="@dimen/header_subtitle"
            android:gravity="center"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginBottom="@dimen/left_right_padding" />



        <Space
            android:id="@+id/spacer2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/page_slogan" />

        <LinearLayout
            android:id="@+id/linear_top"
            android:layout_width="match_parent"
            android:layout_below="@+id/spacer2"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="3">
            <android.support.v7.widget.CardView
                android:id="@+id/noida"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/spacer2"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical|center"
                android:layout_marginLeft="@dimen/margin_override_one"
                android:layout_marginRight="@dimen/margin_override_one"
                android:layout_marginTop="@dimen/margin_override_three"
                android:layout_weight="1"
                android:clickable="true"
                card_view:cardBackgroundColor="#595960"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_override_two"
                    android:layout_marginTop="@dimen/margin_override_two"
                    android:orientation="vertical">



                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_noida"

                        />



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:paddingEnd="14dp"
                        android:paddingRight="14dp"
                        android:text="Noida"
                        android:layout_gravity="fill"

                        android:textColor="@android:color/white"
                        android:textSize="@dimen/font_size_two" />

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
            android:id="@+id/delhi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/spacer2"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical|center"
            android:layout_marginLeft="@dimen/margin_override_one"
            android:layout_marginRight="@dimen/margin_override_one"
            android:layout_marginTop="@dimen/margin_override_three"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
                card_view:cardBackgroundColor="#595960">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_override_two"
                android:layout_marginTop="@dimen/margin_override_two"
                android:orientation="vertical">



                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_lotus_temple"

                    />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:paddingEnd="14dp"
                    android:paddingRight="14dp"
                    android:text="Delhi"
                    android:layout_gravity="fill"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_size_two" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/Gzb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/spacer2"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical|center"
                android:layout_marginLeft="@dimen/margin_override_one"
                android:layout_marginRight="@dimen/margin_override_one"
                android:layout_marginTop="@dimen/margin_override_three"
                android:layout_weight="1"
                android:clickable="true"
                card_view:cardBackgroundColor="#595960"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_override_two"
                    android:layout_marginTop="@dimen/margin_override_two"
                    android:orientation="vertical">



                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_gzb"

                        />



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:paddingEnd="14dp"
                        android:paddingRight="14dp"
                        android:text="Ghaziabad"
                        android:layout_gravity="fill"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/font_size_two" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_bottom"
            android:layout_width="match_parent"
            android:layout_below="@+id/caution"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <android.support.v7.widget.CardView
                android:id="@+id/gurugram"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/spacer2"
                android:layout_marginBottom="20dp"
                android:padding="3dp"
                android:gravity="center_vertical|center"
                android:layout_marginLeft="@dimen/margin_override_one"
                android:layout_marginRight="@dimen/margin_override_one"
                android:layout_marginTop="@dimen/margin_override_three"
                android:layout_weight="1"
                android:clickable="true"
                card_view:cardBackgroundColor="#595960"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_override_two"
                    android:layout_marginTop="@dimen/margin_override_two"
                    android:orientation="vertical">



                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_east_delhi"

                        />



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:paddingEnd="14dp"
                        android:paddingRight="14dp"
                        android:text="Gurgaon"
                        android:layout_gravity="fill"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/font_size_two" />

                </LinearLayout>

            </android.support.v7.widget.CardView>



        </LinearLayout>



        <TextView
            android:id="@+id/caution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_top"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="@dimen/left_right_padding"
            android:paddingRight="@dimen/left_right_padding"
            android:textColor="@color/colorAccent"
            android:textSize="12sp" />




    </RelativeLayout>

    <Button
        android:id="@+id/letsGo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/view_registration"
        android:layout_marginBottom="@dimen/margin_override_two"
        android:layout_marginLeft="@dimen/margin_override_two"
        android:visibility="gone"
        android:layout_marginRight="@dimen/margin_override_two"
        android:background="@drawable/button_bg"
        android:text="@string/letGo"
        android:textColor="#000000"
        android:textStyle="bold" />

</RelativeLayout>
